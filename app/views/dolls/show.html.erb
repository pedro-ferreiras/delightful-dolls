

  <% if @doll.cursed == true%>
  <% curse = "yes" %>
  <%else %>
  <% curse = "no" %>
  <% end %>

<div class="container w-80 d-flex">
  <div class="container mt-4 mb-4 p-3 d-flex justify-content-center">
    <div class="card p-4 bg-light.bg-gradient">
      <div class=" image d-flex flex-column justify-content-center align-items-center">
        <%= cl_image_tag @doll.photo.key %>
        <span class="name mt-3" ><%= @doll.name %></span>
        <span class="state mt-3">Cursed: <%=curse%></span>
        <span class="condition mt-3">Condition: <%= @doll.condition %></span>
        <span class="condition mt-3"><strong>Description: </strong><%= @doll.description %></span>
      </div>
    </div>
  </div>


  <div class="mt-5 mb-5 p-3 mx-auto create">
    <h1>Create a booking</h1>
      <%= simple_form_for [@doll, @booking] do |f| %>
        <%= f.input :start_date, as: :date, html5: true %>
        <%= f.input :end_date, as: :date, html5: true %>
         <%= f.submit 'Create a booking', class: "btn btn-ghost-log-out mb-5 mt-2 w-100" %>
      <% end %>
  </div>
</div>


  
  <div class="container d-flex align-items-center justify-content-center">

    <%# Only show 'delete doll' button if doll belongs to current user %>
    <% if current_user.id == @doll.user_id %>
      <%=  link_to 'Delete doll', doll_path(@doll),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
      class:"btn btn-ghost mb-5 mt-3 mx-auto" %>
    <% end %>
    <%=  link_to 'Go back', dolls_path, class:"btn btn-ghost mb-5 mt-3 mx-auto" %>
  </div>
