<div class="container  mt-3">
  <h1 class="mt-2">Select your doll...</h1>

<div class="cards">
  <% @dolls.each do |doll| %>
    <%= link_to doll_path(doll) do %>
      <div class="card-product mt-2 mb-3">
            <img src="<%= doll.image %>">
            <div class="card-product-infos">
              <h2 class="large-font"><%= doll.name.capitalize %></h2>
              <p>Condition: <%= doll.condition.capitalize %></p>
              <p>Cursed: <%= doll.cursed %></p>
            </div>
      </div>
    <% end %>
  <% end %>
</div>
  <div class="btn-ghost-log-out pt-2 pb-2 mb-5 mt-2">
    <%= link_to "Create a new doll", new_doll_path %>
  </div>
</div>
